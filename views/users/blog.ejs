<%- include ('../partials/header') %>
<link rel="stylesheet" href="/css/blog_styles.css">
<link rel="stylesheet" href="/css/sidebar.css">

<%- include ("../partials/navbar") %>

<div class="container">
  <%- include ("../partials/sidebar") %>

  <div class="blog-container">
    <div class="createPostDiv">
      <a href="/blog/new"><button class="createPostBtn" >Create New Blog Post</button></a>
    </div>
    <div class="border-bottom"></div>

    <div class="all-posts">
      <%- include ("../partials/messages") %>
      <% blogPost.forEach(details => { %>
        <form action="/blog/:<%- id %>" method="get"></form>
        <div class="single-blog-post">
          <div class="img-container">
            <img src="<%= details.image %>" class="img-user overlay" alt="...">
          </div>
          
          <div class="blog-grid-body">
            <h5 class="card-title"> 
              <%= details.title %>
            </h5>
            <p class="card-text">
              <%= details.body %>
            </p>
          </div>
          
          <p class="post-date">
            <small class="text-muted">
              <%= details.date %>
            </small>
          </p>
        </div>
        <div class="border-bottom"></div>
  
      <% }) %>
  
    </div>
  </div>
</div>


</div>




  <script src="/js/blog.js">
  </script>
  <%- include ("../partials/footer") %>